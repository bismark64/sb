source 'https://rubygems.org'

ruby '2.0.0'

gem 'rails', '4.0.3'

gem 'rails-api'
gem "versionist"

gem 'angularjs-rails'

gem 'thin'

gem "mongoid", "~> 4.0.0.beta1"

group :test, :development do
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem "json_spec"
end

group :test do
  gem 'webmock'
  gem 'selenium-webdriver'
  gem 'simplecov', :require => false
  gem 'ffaker'
  gem 'database_cleaner'
end

